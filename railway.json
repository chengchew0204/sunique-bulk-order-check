{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "cd backend && gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 300",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

